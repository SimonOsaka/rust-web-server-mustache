[package]
name = "{{#axum_api}}{{package_name}}{{/axum_api}}"
version = "0.1.0"
edition = "2018"

# See more keys and their definitions at https://doc.rust-lang.org/cargo/reference/manifest.html
[features]
postgres = []
mysql = []

[dependencies]
{{#types}}{{package_name}}{{/types}} = { path = "../{{#types}}{{member_name}}{{/types}}", features = ["postgres"] }
{{#domain}}{{package_name}}{{/domain}} = { package = "{{#domain}}{{package_name}}{{/domain}}", path = "../{{#domain}}{{member_name}}{{/domain}}", features = ["{{features_name}}"] }
{{#auth}}{{package_name}}{{/auth}} = { path = "../{{#auth}}{{member_name}}{{/auth}}" }
axum = { version = "0.3" }
tokio = { version = "1.0", features = ["full"] }
tower = { version = "0.4", features = ["util", "filter", "timeout"] }
tower-http = { version = "0.1", features = ["trace", "add-extension"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
flexi_logger = "0.19"
log = "0.4"
jsonwebtoken = "7"
headers = "0.3"
async-trait = "0.1"
hyper = { version = "0.14", features = ["full"] }
validator = { version = "0.14.0", features = ["derive"] }
http-body = "0.4"
thiserror = "1.0"
