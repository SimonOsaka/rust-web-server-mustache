[package]
name = "{{project_name}}"
version = "0.1.0"
edition = "2018"
autotests = false
authors = ["Simon Osaka <geniusmickymouse@qq.com>"]
include = ["src/**/*", "Cargo.toml", "README.md"]
description = "A example of rust web server to develop api"
repository = "https://github.com/SimonOsaka/rust-web-server-mustache"
documentation = ""
homepage = ""
keywords = ["mustache", "api", "db"]
categories = []
license = "MIT"
readme = "README.md"

[[bin]]
bench = false
path = "server/src/main.rs"
name = "{{#cargo_toml}}{{bin_name}}{{/cargo_toml}}"

[dependencies]
{{#api}}{{package_name}}{{/api}} = { path = "./{{#api}}{{member_name}}{{/api}}", features = ["{{features_name}}"] }
{{#redis}}{{package_name}}{{/redis}} = { path = "./{{#redis}}{{member_name}}{{/redis}}" }
{{#repository}}{{package_name}}{{/repository}} = { path = "./{{#repository}}{{member_name}}{{/repository}}" }
{{#search}}{{package_name}}{{/search}} = { path = "./{{#search}}{{member_name}}{{/search}}" }
async-trait = "0.1"
flexi_logger = "0.19.3"
log = "0.4"
dotenv = "0.15.0"
tokio = { version = "1", features = ["macros"] }

[workspace]
members = [
    "{{#api}}{{member_name}}{{/api}}", 
    "{{#repository}}{{member_name}}{{/repository}}", 
    "{{#domain}}{{member_name}}{{/domain}}", 
    "{{#types}}{{member_name}}{{/types}}", 
    "{{#repository}}{{member_name}}{{/repository}}",
    "{{#search}}{{member_name}}{{/search}}"
    ]
